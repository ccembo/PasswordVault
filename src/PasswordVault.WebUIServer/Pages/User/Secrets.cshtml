@page
@model pv.Pages_UserVaultSecrets.SecretsModel

@{
    ViewData["Title"] = "Secrets in " + Model.Vault.Name;
}

<h1>Index</h1>

<p>
    <a asp-page="CreateSecret" asp-route-id="@Model.Vault.Id" >Add a new secret</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Secret[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secret[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secret[0].URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secret[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Secret) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Details" asp-route-secretid="@item.Id" asp-route-vaultid="@Model.Vault.Id">Details</a> |
                <a asp-page="./Edit" asp-route-secretid="@item.Id" asp-route-vaultid="@Model.Vault.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-secretid="@item.Id" asp-route-vaultid="@Model.Vault.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
